# MemoryReel Web Application Environment Configuration
# Version: 1.0.0

# API Configuration
# Required: Base API URL for backend services
REACT_APP_API_URL=https://api.memoryreel.com/v1
# Required: Content upload endpoint path
REACT_APP_UPLOAD_ENDPOINT=/api/v1/content/upload
# Optional: API rate limit per hour (default: 100)
REACT_APP_API_RATE_LIMIT=100

# Content Delivery Network (CDN)
# Required: CDN endpoint for media delivery
REACT_APP_CDN_URL=https://cdn.memoryreel.com
# Optional: CDN region for edge optimization
REACT_APP_CDN_REGION=us-east-1
# Optional: Comma-separated list of CDN edge locations
REACT_APP_CDN_EDGES=us-east-1,eu-west-1,ap-southeast-1

# AWS Cognito Authentication
# Required: AWS region for Cognito services
REACT_APP_AWS_REGION=us-east-1
# Required: Cognito user pool ID
REACT_APP_COGNITO_USER_POOL_ID=us-east-1_xxxxxx
# Required: Cognito client ID
REACT_APP_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxx
# Required: Cognito domain for authentication
REACT_APP_COGNITO_DOMAIN=auth.memoryreel.com
# Required: OAuth redirect URL for sign-in
REACT_APP_REDIRECT_SIGN_IN=https://memoryreel.com/auth/callback
# Required: OAuth redirect URL for sign-out
REACT_APP_REDIRECT_SIGN_OUT=https://memoryreel.com

# Security Configuration
# Optional: Enable security headers (default: true)
REACT_APP_SECURITY_HEADERS=true
# Optional: Maximum failed login attempts before lockout
REACT_APP_MAX_LOGIN_ATTEMPTS=5
# Optional: Login lockout duration in seconds
REACT_APP_LOGIN_LOCKOUT_DURATION=900

# Media Processing
# Optional: Maximum concurrent uploads (default: 3)
REACT_APP_MAX_CONCURRENT_UPLOADS=3
# Optional: Upload chunk size in bytes (default: 5242880)
REACT_APP_UPLOAD_CHUNK_SIZE=5242880
# Optional: Upload timeout in milliseconds (default: 30000)
REACT_APP_UPLOAD_TIMEOUT=30000

# Monitoring and Logging
# Optional: Enable application monitoring (default: true)
REACT_APP_ENABLE_MONITORING=true
# Optional: Application log level (default: error)
REACT_APP_LOG_LEVEL=error
# Optional: Enable error reporting (default: true)
REACT_APP_ERROR_REPORTING=true
# Optional: DataDog RUM application ID
REACT_APP_DATADOG_APP_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# Optional: DataDog client token
REACT_APP_DATADOG_CLIENT_TOKEN=pubxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Feature Flags
# Optional: Enable multi-factor authentication (default: true)
REACT_APP_ENABLE_MFA=true
# Optional: Enable biometric authentication (default: true)
REACT_APP_ENABLE_BIOMETRIC=true
# Optional: Enable offline mode (default: false)
REACT_APP_ENABLE_OFFLINE_MODE=false

# Cache Configuration
# Optional: Cache TTL in seconds (default: 3600)
REACT_APP_CACHE_TTL=3600
# Optional: Enable response caching (default: true)
REACT_APP_ENABLE_CACHE=true
# Optional: Maximum cache size in bytes (default: 104857600)
REACT_APP_MAX_CACHE_SIZE=104857600

# Device Optimization
# Optional: Enable device-specific optimizations (default: true)
REACT_APP_ENABLE_DEVICE_OPTIMIZATIONS=true
# Optional: Enable TV mode optimizations (default: false)
REACT_APP_ENABLE_TV_MODE=false
# Optional: Enable mobile optimizations (default: true)
REACT_APP_ENABLE_MOBILE_OPTIMIZATIONS=true