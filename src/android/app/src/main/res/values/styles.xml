<?xml version="1.0" encoding="utf-8"?>
<!-- Material Design 3 version: 1.9.0 -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme extending Material3 -->
    <style name="Theme.MemoryReel" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.MemoryReel.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.MemoryReel.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">0.0094</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextAppearance.MemoryReel.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">0.033</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!-- Netflix-style Carousel -->
    <style name="Widget.MemoryReel.Carousel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <!-- Media Card Style -->
    <style name="Widget.MemoryReel.MediaCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/mediaCardBackground</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@animator/card_state_list_animator</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:contentDescription">@string/media_card_content_description</item>
        <item name="cornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- TV-Optimized Focus Highlight -->
    <style name="Widget.MemoryReel.TV.FocusHighlight">
        <item name="android:background">@color/tvFocusHighlight</item>
        <item name="android:padding">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:nextFocusDown">@+id/next_row</item>
        <item name="android:nextFocusUp">@+id/previous_row</item>
        <item name="android:nextFocusLeft">@+id/previous_item</item>
        <item name="android:nextFocusRight">@+id/next_item</item>
        <item name="android:stateListAnimator">@animator/tv_focus_animator</item>
    </style>

    <!-- Accessibility-Enhanced Button -->
    <style name="Widget.MemoryReel.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- TV-Optimized Large Button -->
    <style name="Widget.MemoryReel.TV.Button" parent="Widget.MemoryReel.Button">
        <item name="android:minHeight">64dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">24dp</item>
        <item name="android:focusedByDefault">false</item>
        <item name="android:background">@drawable/tv_button_background</item>
    </style>

    <!-- Search Bar Style -->
    <style name="Widget.MemoryReel.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/colorSurfaceVariant</item>
        <item name="android:elevation">4dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.MemoryReel.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Material3.BottomNavigationView.ActiveIndicator</item>
    </style>

</resources>