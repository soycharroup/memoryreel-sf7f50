# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_ORIGIN=http://localhost:3001
API_RATE_LIMIT=100
API_RATE_WINDOW=900
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_VERSION=2024-01
OPENAI_MODEL_VERSION=gpt-4
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_AI_TIMEOUT=30000
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_AI_TIMEOUT=30000
AI_FAILOVER_STRATEGY=sequential
AI_REQUEST_TIMEOUT=60000

# Authentication Configuration
COGNITO_USER_POOL_ID=your_cognito_user_pool_id
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_IDENTITY_POOL_ID=your_cognito_identity_pool_id
JWT_SECRET=your_jwt_secret_key
JWT_PUBLIC_KEY=your_jwt_public_key
JWT_PRIVATE_KEY=your_jwt_private_key
JWT_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=2592000
MFA_ENABLED=true
MFA_METHODS=SMS,EMAIL,TOTP
PASSWORD_MIN_LENGTH=12
PASSWORD_POLICY_PATTERN=^(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*[!@#$%^&*])
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
AWS_SNS_ACCESS_KEY=your_sns_access_key
AWS_SES_ACCESS_KEY=your_ses_access_key

# AWS Services Configuration
S3_BUCKET_NAME=your_s3_bucket_name
S3_BACKUP_BUCKET=your_backup_bucket_name
CLOUDFRONT_DOMAIN=your_cloudfront_domain
CLOUDFRONT_KEY_PAIR_ID=your_key_pair_id
CLOUDFRONT_PRIVATE_KEY_PATH=/path/to/private/key
S3_UPLOAD_TIMEOUT=300000
S3_MAX_FILE_SIZE=104857600
S3_STORAGE_CLASS=INTELLIGENT_TIERING
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 0 * * *

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/memoryreel
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_DATABASE=memoryreel
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=100
MONGODB_CONNECT_TIMEOUT=30000
MONGODB_REPLICA_SET=rs0
MONGODB_READ_PREFERENCE=primaryPreferred
MONGODB_BACKUP_SCHEDULE=0 0 * * *
MONGODB_BACKUP_RETENTION=7

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_PRIMARY_HOST=your_redis_primary_host
REDIS_PRIMARY_PORT=6379
REDIS_REPLICA_HOSTS=replica1:6379,replica2:6379
REDIS_MAX_RETRIES=3
REDIS_RETRY_INTERVAL=1000
REDIS_KEEP_ALIVE=true
REDIS_KEY_PREFIX=memoryreel:
REDIS_DEFAULT_TTL=3600

# Logging and Monitoring
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/memoryreel
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
METRICS_PREFIX=memoryreel
PERFORMANCE_MONITORING_ENABLED=true